/* components/grant.wxss */
.section{
        position: absolute;
        width:100%;
        height:100%;
        left:0;
        top:0;
        z-index:9999;
        background-color:#f4f4f4;
}
.flex-center{
        display: flex;
        justify-content:center;    
        align-items:center;
}
.header {
        margin:80rpx 0 50rpx 0;
        flex-wrap:wrap;
}
 
.header .avatar {
    width: 200rpx;
    height: 200rpx;
    border-radius: 100rpx;
    overflow:hidden;
}
.header .nickname{
        flex:100%;
        height:68rpx;
}
.content{
        font-size:30rpx;
} 
.content text {
    color: #9d9d9d;
    margin-top: 12rpx;
}
 
.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}
.tip-update-version{
        height: 100%
}
.tip-update-version text{
        padding-left: 8rpx
}