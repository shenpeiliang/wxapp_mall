.goods {
        display: flex;
        flex-wrap: wrap;
}

.goods .goods-section {
        padding: 6rpx;
        display: flex;
}

.goods .item {
        flex-direction: column;
        background-color: #fff;
}

.goods .item:nth-child(odd) {
        padding-right: 6px;
}

.goods .item:nth-child(even) {
        padding-left: 6px;
}

.goods .item .img {
        width: 100%;
        height: 300rpx;
}

.goods .item  .title {
        color: #333;
        font-size: 30rpx;
        height: 90rpx;
        overflow: hidden;
        line-height: 40rpx;
        text-align: center;
        padding: 10rpx 3rpx 0 3rpx;
        box-sizing: border-box;
        display: flex;
}

.goods .item .footer {
        display: flex;
        font-size: 32rpx;
        padding: 20rpx 6rpx 0 6rpx;
        align-content: center;
}

.goods .item  .price {
        height: 48rpx;
        line-height: 48rpx;
}

.goods .item .price text{
        color: #f40;
}

.goods .item .bought {
        font-size: 28rpx;
        display: flex;
        justify-content: flex-end;
        height: 48rpx;
        line-height: 48rpx;
}

.goods .item .bought text{
        color: #999;
}

.no-data .btn-link-goods {
        display: flex;
        justify-content: center;
        align-items: center;
        border: 1px solid #f77344;
        width: 220rpx;
        border-radius: 20rpx;
        color: #f77344;
}