.action-item{
        height:90rpx;
        color:#505050;
}
.action-item .icon-left{
        padding:0 10rpx 0 20rpx;
}
.action-item .icon-left image{
        width:60rpx;
        height:60rpx;
}
.action-item .title{
        flex: 1;
}
.action-item .icon-right{
        font-size:48rpx;
        color:#999;
}

.section-main {
        border-bottom: 2rpx solid #f4f4f4;
}

.section-bottom {
        border: none;
}

.item {
        height: 90rpx;
        color: #505050;
}

.title {
        display: flex;
        width: 160rpx;
        flex: none;
        height: 90rpx;
        align-items: center;
        font-size: 32rpx;
}

.content {
        display: flex;
        flex: auto;
        width: 100%;
        overflow: hidden;
}

.content input, .content picker {
        height: 90rpx;
        line-height: 90rpx;
        width: 100%;
        padding: 0 16rpx;
        font-size: 32rpx;
}

.icon-right {
        display: flex;
        width: 42rpx;
        height: 90rpx;
        align-items: center;
        justify-content: flex-end;
        flex: none;
        font-size:32rpx;
        color:#999;
}

.btn-bottom {
        display: block;
        width: 100%;
        position: fixed;
        bottom: 0;
        left: 0;
        height: 96rpx;
        z-index:999;
}

.get-code {
        width: 200rpx;
        justify-content: center;
        color: #4183c4;
}

.header {
        margin: 20rpx 0;
}

.header .icon {
        color: #1aad19;
        font-size: 120rpx;
}

.header .title {
        width: 100%;
        font-weight: bold;
        height: 68rpx;
}

.base .title {
        height: 50rpx;
        font-size: 30rpx;
}

.content-right {
        width: 100%;
        height: 90rpx;
        display: block;
        line-height: 90rpx;
        font-size: 32rpx;
        text-align:right;
}