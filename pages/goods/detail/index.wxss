.tab-fixed{
        width:100%;
        position: fixed;
        left: 0;
        top: 0;
        z-index:999;
}
.tab {
        height: 34px;
}

.tab view {
        flex: 1;
        font-size: 30rpx;
}

.tab .active {
        color: #ff5000;
        border-bottom: 2rpx solid #ff5000;
}

.section-fixed{
        position: absolute;
        left: 0;
        top: 34px;
        z-index: 998;
        width: 100%;
}