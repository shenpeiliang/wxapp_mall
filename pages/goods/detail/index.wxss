/**index.wxss**/
@import '../../../style/comment.wxss';

.slide {
        height: 420rpx;
        width: 100%;
        background-color: #fff;
}

.slide swiper {
        height: inherit;
}

.slide-image {
        display: block;
        width: 100%;
        height: 420rpx;
}

.title {
        font-size: 30rpx;
        line-height: 40rpx;
        padding: 10rpx 0;
}

.price {
        color: #f40;
        font-size: 40rpx;
        padding: 20rpx 0;
}

.section-action .select-spec .result {
        padding-left: 12rpx;
        color: #555;
}

.section-action .select-spec .iconfont {
        position: absolute;
        right: 0;
        font-size: 46rpx;
        color: #555;
}

.section-action view {
        background-color: #fff;
        height: 72rpx;
        display: flex;
        align-items: center;
        padding-left: 20rpx;
        margin-bottom: 12rpx;
}

.freight {
        font-size: 30rpx;
        padding: 10rpx 0;
}

.tab-content-item {
        width: 100%;
        padding: 10rpx;
        overflow: hidden;
}

.tab-content-item rich-text .rich-text-img {
        display: block;
        max-width: 100%;
        height: auto;
}

.footer-section {
        position: fixed;
        left: 0;
        bottom: 0;
        background-color: #fff;
        display: flex;
        width: 100%;
        z-index:998;
}

.footer-section .footer-item {
        display: flex;
        width: 256rpx;
        height: 50px;
        color: #555;
        font-size: 30rpx;
}

.footer-item-nav {
        display: flex;
}

.footer-item-nav view {
        flex-wrap: wrap;
}

.footer-item-nav .iconfont {
        align-items: flex-end;
        font-size: 44rpx;
}

.footer-section .footer-item-buy {
        background-color: #f40;
        color: #fff;
}

.footer-section .footer-item-cart {
        background-color: #ff9402;
        color: #fff;
}

.goods-spec-section {
        padding: 6rpx 8rpx;
}

.goods-spec-section .goods-spec {
        display: flex;
        flex-wrap: wrap;
}

.goods-spec-section .goods-spec .goods-spec-item {
        display: flex;
        margin: 12rpx;
}

.goods-spec-section .goods-spec .goods-spec-item-box {
        padding: 12rpx;
        border: 1px solid #ccc;
        display: flex;
}

.goods-spec-section .goods-spec image {
        display: flex;
        width: 54px;
        height: 54px;
}

.goods-spec-section .goods-spec .goods-spec-item-box view {
        padding: 0 14rpx;
}

.goods-spec-select-title {
        margin-left: 12rpx;
        color: #999;
        height: 60rpx;
        justify-content: left;
}

.goods-spec-section .goods-spec .goods-spec-active .goods-spec-item-box {
        border-color: #393;
        color: #393;
}

.goods-spec-preview {
        display: flex;
        margin-bottom: 18rpx;
        border-bottom: 2rpx solid rgba(7, 17, 27, 0.1);
        padding-bottom: 20rpx;
}

.goods-spec-preview image {
        display: flex;
        flex: none;
        height: 200rpx;
        width:200rpx;
        border: 1px solid rgba(7, 17, 27, 0.1);
}

.goods-spec-header-des {
        padding-left: 20rpx;
}

.goods-spec-select-section {
        display: flex;
        flex-wrap: wrap;
        margin-top: 30rpx;
        padding-left: 12rpx;
        padding-top: 20rpx;
}

.goods-spec-select-section .desc {
        align-items: center;
        width: 100%;
}

.goods-spec-select-section .num {
        font-size: 38rpx;
}

.goods-spec-select-section .sku {
        color: #7a7a7a;
        padding: 0 8rpx;
}

.goods-spec-select-section .number {
        flex: none;
        display: flex;
        align-items: center;
        margin: 20rpx 0;
        border: 1px solid #ccc;
}

.goods-spec-select-section .num-icon {
        font-size: 50rpx;
        width: 100rpx;
        height: 100%;
        font-weight: bold;
}

.goods-spec-select-section .num-ac {
        border-right: 1px solid #ccc;
}

.goods-spec-select-section .num-ac-zero {
        background-color: rgba(7, 17, 27, 0.1);
}

.goods-spec-select-section .num-dc {
        border-left: 1px solid #ccc;
}

.goods-spec-select-section .price {
        font-size: 36rpx;
}

.goods-spec-select-section .num-input input {
        text-align: center;
        width: 68rpx;
        height: 50rpx;
}

