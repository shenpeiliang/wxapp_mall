/* pages/user/order/detail/index.wxss */
@import '../../../../style/order.wxss';

.order-detail-calculate {
        padding-bottom: 6px;
}

.order-state {
        height: 200rpx;
        background: linear-gradient(to right, rgb(255, 144, 0), rgb(255, 80, 0)) center center / cover no-repeat;
}

.order-state view {
        color: #fff;
        font-size: 36rpx;
}

.order-state .iconfont {
        font-size: 48rpx;
        padding-right: 6rpx;
}

.order-address {
        padding: 20rpx 0;
}

.order-address .section .left {
        width: 80rpx;
}

.order-address .section .left .bg {
        width: 64rpx;
        height: 64rpx;
        border-radius: 64rpx;
        background-color: #ff5000;
}

.order-address .section .left .bg .iconfont {
        color: #fff;
}

.order-address .section .right {
        flex-wrap: wrap;
        padding-left: 10px;
        font-size: 32rpx;
        flex: auto;
}

.order-address .section .right .tel {
        color: #999;
        padding-left: 18rpx;
        font-size: 30rpx;
}

.order-address .section .right .section-2 {
        padding-top: 10rpx;
}

.order-con view {
        line-height: 48rpx;
}

.order-con .item {
        flex: 1;
}

.order-con .btn-copy {
        width: 80rpx;
        border: 1px solid #c2c2c2;
        border-radius: 10rpx;
}

.order-logs .item {
        padding: 6rpx 0 10rpx 0;
        font-size: 30rpx;
}

.order-logs .item view {
        width: 100%;
        line-height:42rpx;
}

.order-logs .item .item-time {
        color: #999;
}
