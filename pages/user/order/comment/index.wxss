/* pages/user/order/comment/index.wxss */
@import '../../../../style/order.wxss';

.grade {
        font-size: 30rpx;
        height: 80rpx;
        padding: 6rpx 8rpx;
        align-items: center;
}

.message {
        padding: 20rpx 8rpx 12rpx 8rpx;
}

.message textarea {
        font-size: 30rpx;
        width: 100%;
}

.grade .left {
        color: #000;
        width: 128rpx;
}

.grade .center {
        color: #999;
        width: 160rpx;
        text-align: right;
        padding-right: 20rpx;
}

.grade .right {
        display: flex;
        flex: 1;
}

.grade .right .iconfont {
        font-size: 56rpx;
        color: #999;
        margin: 0 14rpx;
}

.grade .right .selected {
        color: #f83f3d;
}
