/* pages/user/home/index.wxss */
@import '../../../style/fonts/iconfont.wxss';
.header {
        position: relative;
        height: 340rpx;
}

.header .bg {
        width: 100%;
        height: 200rpx;
        display: flex;
}

.user {
        width: 100%;
        position: absolute;
        left: 16rpx;
        top: 120rpx;
        display: flex;
}

.user-right {
        display: flex;
        align-content: flex-end;
        flex-wrap: wrap;
        padding-left: 12rpx;
        width: 100%;
        overflow: hidden;
}

.user .avatar {
        display: flex;
        width: 200rpx;
        height: 200rpx;
        border-radius: 100rpx;
        flex: none;
        overflow: hidden;
}

.user .nickname {
        display: block;
        width: 100%;
        height: 58rpx;
        line-height: 58rpx;
        font-size: 32rpx;
        font-weight: bold;
}

.user text {
        display: block;
        color:#fff;
        margin-bottom:18rpx;
        background-color:#E7A100;
        padding:5rpx 10rpx;
        border-radius:20rpx;
        font-size: 26rpx;
}

.order {
        display: flex;
        padding: 20rpx 0;
}

.order .item {
        flex-wrap: wrap;
        display: flex;
        color: #999;
}

.order .item view {
        width: 100%;
}

.order .item .icon {
        font-size: 56rpx;
        color:#999;
}

.order .item .title {
        font-size: 30rpx;
        color: #666;
}
.action-item{
        height:90rpx;
        color:#505050;
}
.action-item .icon-left{
        font-size:58rpx;
        padding:0 10rpx 0 20rpx;
}
.action-item .icon-dingdan{
        color: #666;
}
.action-item .icon-gouwuche{
        color: #E7A302
}
.action-item .icon-dizhi{
        color: #7DACDA;
}
.action-item .icon-gerenziliao{
        color: #c6c5ca;        
        font-size: 46rpx;
}
.action-item .icon-anquan{
        color: #99cc66;
}
.action-item .icon-bangzhu{
        color: #c6c5ca;
}
.action-item .icon-left image{
        width:60rpx;
        height:60rpx;
}
.action-item .title{
        flex: 1;
}
.action-item .icon-right{
        font-size:48rpx;
        color:#999;
}
.footer{
        height: 100rpx;
}